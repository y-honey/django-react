{
  "projectName": "{{ projectName }}",
  "defaultEnv": "{{ defaultEnv }}",
  "aws": {
    "profile": "{{ awsProfile }}",
    "region": "{{ awsRegion }}"
  },
  "toolsConfig": {
    "cloudFrontCertificate": "{{ cloudFrontCertificate }}",
    "hostedZone": {
      "id": "{{ hostedZoneId }}",
      "name": "{{ hostedZoneName }}"
    },
    "domains": {
      "versionMatrix": "status.{{ appDomain }}"
    }
  },
  "envConfig": {
    "{{ defaultEnv }}": {
      "hostedZone": {
        "id": "{{ hostedZoneId }}",
        "name": "{{ hostedZoneName }}"
      },
      "domains": {
        "adminPanel": "admin.{{ defaultEnv }}.{{ appDomain }}",
        "api": "api.{{ defaultEnv }}.{{ appDomain }}",
        "webApp": "app.{{ defaultEnv }}.{{ appDomain }}",
        "www": "www.{{ defaultEnv }}.{{ appDomain }}"
      }
    },
    "test": {
      "hostedZone": {
        "id": "testHostedZoneId",
        "name": "testHostedZoneName"
      },
      "domains": {
        "adminPanel": "admin.example.com",
        "api": "api.example.com",
        "webApp": "app.example.com",
        "www": "www.example.com"
      }
    },
    "local": {
      "hostedZone": {
        "id": "localHostedZoneId",
        "name": "localHostedZoneName"
      },
      "domains": {
        "adminPanel": "admin.localhost:5000",
        "api": "api.localhost:5000",
        "webApp": "",
        "www": ""
      }
    }
  }
}
