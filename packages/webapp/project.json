{
  "name": "webapp",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/webapp/src",
  "projectType": "application",
  "implicitDependencies": ["tools"],
  "targets": {
    "setup": {
      "executor": "@sb/tools:setup",
      "options": {
        "cwd": "packages/webapp"
      }
    },
    "graphql": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/webapp",
        "color": true
      },
      "configurations": {
        "generate-types": {
          "command": "nx run webapp-api-client:graphql:generate-types",
          "parallel": false
        },
        "generate-types:watch": {
          "command": "nx run webapp-api-client:graphql:generate-types:watch"
        },
        "download-schema": {
          "command": "nx run webapp-api-client:graphql:download-schema"
        }
      }
    },
    "start:app": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/webapp",
        "color": true,
        "commands": ["pnpm run vite", "nx run webapp:graphql:generate-types:watch"]
      },
      "dependsOn": ["setup", "graphql:generate-types"]
    },
    "vite-build-old": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "app",
      "options": {
        "cwd": "packages/webapp",
        "color": true
      },
      "configurations": {
        "app": {
          "command": "pnpm run vite build"
        },
        "emails": {
          "command": "pnpm run vite build -c ./vite.emails.config.ts"
        }
      },
      "dependsOn": ["graphql:generate-types"]
    },
    "vite-build": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "app",
      "options": {
        "cwd": "packages/webapp",
        "color": true
      },
      "configurations": {
        "app": {
          "command": "pnpm run vite -c vite.config.ts build"
        },
        "emails": {
          "command": "pnpm run vite -c vite.emails.config.ts build"
        }
      },
      "dependsOn": ["graphql:generate-types"]
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/webapp",
        "color": true
      },
      "configurations": {
        "app": {
          "command": "nx run tools:chamber-exec webapp nx run webapp:vite-build:app"
        },
        "emails": {
          "command": "nx run tools:chamber-exec webapp nx run webapp:vite-build:emails"
        }
      },
      "dependsOn": ["graphql:generate-types"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/webapp/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/webapp",
        "color": true,
        "commands": [
          "pnpm run cdk deploy *WebAppStack",
          "nx run tools:upload-service-version webapp \"url=https://${DOMAIN_WEB_APP}\""
        ],
        "parallel": false
      }
    }
  },
  "tags": []
}
